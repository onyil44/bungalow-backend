{
  "compilerOptions": {
    "checkJs": false,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "."
  },
  "include": [
    "controllers/**/*",
    "routes/**/*",
    "models/**/*",
    "middlewares/**/*",
    "utils/**/*",
    "services/**/*",
    "config/**/*",
    "*.js",
    "*.ts",
    "restore/data-guests.js",
    "restore/data-bookings.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".nuxt",
    ".vite",
    ".svelte-kit",
    "coverage",
    "logs",
    ".git"
  ]
}
